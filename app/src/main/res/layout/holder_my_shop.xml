<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/llPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingStart="@dimen/sp10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivCompany"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_centerVertical="true"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp5"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@+id/ivRight"
            android:layout_toRightOf="@+id/ivCompany"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start"
            android:paddingStart="5dp"
             android:textColor="@color/textColorMarket" />

        <TextView
            android:id="@+id/tvPhone"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="@dimen/dp5"
            android:layout_marginBottom="@dimen/sp10"
            android:layout_toRightOf="@+id/ivCompany"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="5dp"
             android:textColor="@color/textColorMarket"
            android:textSize="@dimen/dp12" />

        <TextView
            android:id="@+id/ivRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/sp10"
            android:text="@string/view_details"
            android:textColor="@color/blue" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>