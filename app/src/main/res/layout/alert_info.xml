<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Drawer.Msgs_Notifications.Alert_Info">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/tb_id"
        android:layout_marginStart="-15dp"
        android:background="@color/blue"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/back_id"
                android:src="@drawable/ic_back_white"
                android:padding="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/back_id"
                android:gravity="center_vertical"
                android:text="Alert Info"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:singleLine="true"
                />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_edit"
                android:visibility="gone"
                android:padding="14dp"
                />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_gray_line_white"
        android:text="Find Houses - Apartments for Rent in and around Ranjit Avenue in Amritsar"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:lineSpacingExtra="4dp"
        android:padding="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:background="@drawable/bottom_gray_line_white"
        android:paddingBottom="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="ID"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="City"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Location"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Created On"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Category"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Subcategory"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="No Of Rooms"
                android:textColor="@color/black"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_dots"
                android:padding="10dp"
                />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_dots"
                android:padding="10dp"
                />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_dots"
                android:padding="10dp"
                />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_dots"
                android:padding="10dp"
                />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_dots"
                android:padding="10dp"
                />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_dots"
                android:padding="10dp"
                />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_dots"
                android:padding="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="2280873487"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Amritsar"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Ranjit Avenue"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="17-05-2019 16:22:48"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Real Estate"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Houses - Apartments for Rent"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="1 BHK, 2 BHK"
                android:textColor="@color/black"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/tv_id"
        android:background="@drawable/border_line_blue"
        android:layout_margin="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Unsubscribe"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

</LinearLayout>