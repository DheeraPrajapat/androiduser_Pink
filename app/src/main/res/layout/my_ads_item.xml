<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:layout_marginTop="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bottom_gray_line_white"
            android:paddingBottom="20dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_id"
                    android:clickable="false"
                    android:tint="#6F000000"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    >


                </androidx.recyclerview.widget.RecyclerView>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:tint="#6F000000"
                    android:id="@+id/fav_id"
                    android:src="@drawable/ic_like"
                    android:padding="4dp"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_id"
                android:text="Title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16dp"
                android:singleLine="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24,432 /Month on EMI | $ 12245 "
                android:textSize="14dp"
                android:visibility="gone"
                android:id="@+id/price_desc"
                android:textColor="@color/black"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="58,000 Kms / Diesal / 1st Owner"
                android:textSize="14dp"
                android:id="@+id/time_1"
                android:visibility="gone"
                android:textColor="@color/black"
                android:paddingLeft="18dp"
                android:paddingTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City Name | Time"
                android:textSize="14dp"
                android:id="@+id/time"
                android:textColor="#B9B1B1"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City Name | Time"
                android:textSize="12sp"
                android:visibility="gone"
                android:id="@+id/time_3"
                android:textColor="#D3D1BD"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:text="20,000"

                    android:id="@+id/price"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    >

                    <TextView
                        android:id="@+id/open_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_marginStart="4dp"

                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/border_line_blue"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="Delete"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_line_blue"
                       android:layout_toRightOf="@+id/open_chat"
                        android:text="Edit"

                        android:id="@+id/edit_ad"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_margin="4dp"
                        />




                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>