<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="type"
            type="Integer" />

        <import type="android.view.View"/>

        <variable
            name="vm"
            type="com.marius.valeyou.ui.fragment.home.HomeFragmentVM" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@color/white_trans">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/filter"
                    android:padding="@dimen/dp15"
                    style="@style/TextViewStyleSubTitleRegular"/>

                <ImageView
                    android:id="@+id/iv_cancel"
                    android:onClick="@{v->vm.onClick(v)}"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_cancel_icon"
                    android:layout_marginEnd="@dimen/dp10"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_filter_cat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never" />

                    <Button
                        android:id="@+id/b_apply"
                        android:onClick="@{v->vm.onClick(v)}"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        style="@style/RectangleButtonStyle"
                        android:text="@string/apply"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp16"
                        android:layout_marginRight="@dimen/dp7"
                        android:layout_marginTop="@dimen/dp20"
                        android:layout_marginLeft="@dimen/dp7"/>

                </LinearLayout>
                <View
                    android:layout_width="@dimen/dp1"
                    android:layout_height="match_parent"
                    android:background="@color/divider"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/ft_rating"
                        layout="@layout/map_include_filter_rating"
                        app:vm="@{vm}"
                        android:visibility="@{type==2?View.VISIBLE:View.GONE}"/>

                    <include
                        android:id="@+id/ft_distance"
                        layout="@layout/map_include_distance_filter"
                        app:vm="@{vm}"
                        android:visibility="@{type==3?View.VISIBLE:View.GONE}"/>

                    <include
                        android:id="@+id/ft_state"
                        layout="@layout/map_include_state_filter"
                        app:vm="@{vm}"
                        android:visibility="@{type==4?View.VISIBLE:View.GONE}"/>

                    <include
                        android:id="@+id/ft_job"
                        layout="@layout/map_include_no_job_filter"
                        app:vm="@{vm}"
                        android:visibility="@{type==5?View.VISIBLE:View.GONE}"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>